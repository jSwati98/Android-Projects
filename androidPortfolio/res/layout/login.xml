<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <LinearLayout android:id="@+id/linearLayout1" android:layout_alignParentLeft="true" android:layout_height="wrap_content" android:orientation="vertical" android:layout_centerInParent="true" android:layout_width="match_parent" android:gravity="center">
        <TextView android:layout_width="wrap_content" android:textSize="20sp" android:text="Select Server" android:layout_height="wrap_content" android:id="@+id/lblServer" android:inputType="textUri"></TextView>
        <EditText android:id="@+id/txtServer" android:layout_width="match_parent" android:layout_height="wrap_content"></EditText>
        <TextView android:layout_width="wrap_content" android:textSize="20sp" android:layout_height="wrap_content" android:id="@+id/lblUser" android:inputType="textUri" android:text="User Name"></TextView>
        <EditText android:id="@+id/txtUser" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="textUri"></EditText>
        <Button android:layout_height="wrap_content" android:text="Connect" android:layout_width="match_parent" android:id="@+id/btnConnect" android:textStyle="bold"></Button>
    </LinearLayout>
</RelativeLayout>
